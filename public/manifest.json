
{
  "manifest_version": 3,
  "name": "YouTube Learner",
  "version": "1.0.0",
  "description": "Enhance learning from YouTube videos with AI summaries, quizzes, and more",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "YouTube Learner"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
